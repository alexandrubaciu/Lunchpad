 <section class="section">
            <article class="card">
              <h2 class="card__title"> Login</h2>
<%= form_for(resource, class: "form", as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form__group">
   <%= f.label :email , class:"form__label"  %>
    <%= f.email_field :email, autofocus: true  ,class:"form__input"  %>
  </div>

  <div class="form__group">
    <%= f.label :password ,class:"form__label" %>
    <%= f.password_field :password,  autocomplete: "off",class:"form__input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form__group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,class:"form__label"%>
    </div>
  <% end -%>

  <div class="form__group">
    <%= f.submit "Log in" ,class:"form__submit"%>
  </div>
<% end %>
          
<%= render "devise/shared/links" %>
   </article>         
            </section>