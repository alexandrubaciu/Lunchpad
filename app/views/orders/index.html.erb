


<% if current_user.admin? %>
<h1>Listing orders</h1>
 
<table>
  <tr>
    <th>Menu</th>
    
    <th>Order Status</th>
    <th colspan="3"></th>
  </tr>
 
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.menu %></td>
     
      <td><%= order.order_status%></td>

      <td><%= link_to 'Show', order_path(order), class:"form__submit form__submit--auto" %></td>
      <td><%= link_to 'Edit', edit_order_path(order), class:"form__submit form__submit--auto" %></td>
      <td><%= link_to 'Destroy', order_path(order), class:"form__submit form__submit--auto",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
         </tr>

  <% end %>
</table>
 <% end %>

 