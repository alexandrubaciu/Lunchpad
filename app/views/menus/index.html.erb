<section class="section">     
   <article class="card card--meniu">       
                           
 <h2 class="card__title"> MENIU</h2>
<% if current_user.admin? %>
  <%= link_to 'New menu', new_menu_path , class: "form__submit form__submit--centrat"%>
<% end %>
<table>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>First dish</th>
    <th>First second</th>
    <th>Dessert</th>
    <th colspan="5"></th>
  </tr>
 
  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.date %></td>
      <td><%= menu.title %></td>
       <td><%= menu.first_dish %></td>
        <td><%= menu.second_dish %></td>
         <td><%= menu.dessert %></td>
         <% if current_user.admin? %>
          <td><%= link_to 'Show', menu_path(menu), class:"form__submit form__submit--auto" %></td>
          <td><%= link_to 'Edit', edit_menu_path(menu) , class:"form__submit 
          form__submit--auto"%></td>
          <td><%= link_to 'Delete', menu_path(menu),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },class:"form__submit form__submit--auto" %></td>
        <% end %>
    
    </tr>
  <% end %>
</table>

<br>
<%= link_to 'New order', new_order_path , class: "form__submit form__submit--centrat" %>
</article>
</section>